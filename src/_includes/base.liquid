<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" href="/assets/favicon.ico" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="theme-color" content="#191919" />
    <meta name="generator" content="Eleventy">
    <meta name="title" content="{{ title }}" />
    <meta name="description" content="{{ site.description }}" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ site.url }}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ site.description }}" />
    {% unless ogImage%}
    <meta property="og:image" content="/assets/ava.png" />
    {% endunless %}
    {% if ogImage%}
    <meta property="og:image" content="{{ ogImage }}" />
    {% endif %}

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="{{ site.url }}" />
    <meta property="twitter:title" content="{{ title }}" />
    <meta property="twitter:description" content="{{ site.description }}" />
    {% unless ogImage%}
    <meta property="twitter:image" content="/assets/ava.png" />
    {%endunless%}
    {% if ogImage%}
    <meta property="twitter:image" content="{{ ogImage }}" />
    {%endif%}

    <link href="/assets/styles/tailwind.css" rel="stylesheet" />
    <link href="/assets/styles/index.css" rel="stylesheet" />
    <link href="/assets/styles/prism-okaidia.css" rel="stylesheet" />
    <script src="/assets/scripts/font-awesome.min.js"></script>
    <script src="/assets/scripts/iconify.min.js"></script>
    <script data-goatcounter="https://khoi-website.goatcounter.com/count" async src="https://gc.zgo.at/count.js"></script>
    <title>{{ title }}</title>
  </head>

  <body class="text-white bg-black">
    {{ content }}    
  </body>
</html>