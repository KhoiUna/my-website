---
layout: main
---

<a href="/" class="block w-fit">
  <p class="bg-[#0e3d66] w-fit p-1 text-2xl font-bold mt-5 leading-tight capitalize">{{ site.title }}</p>
  <p class="text-xl mt-1">👨‍💻 ☕️</p>
</a>

{% include "nav.liquid" %}

<a class="hover:underline" href="{{ url }}">
  <p class="text-4xl font-black pt-5 md:pt-30 pb-1 leading-tight">{{ title }}</p>
</a>

<div class='pb-5'>
    <em>Born in {{ date | date: "%b %Y" }}</em>
</div>

<div id="post" class="prose prose-invert">
  {% if ogImage %}  
    <img class="w-[200px] rounded-lg object-fit" src="{{ ogImage }}" alt="Post hero image" />
  {% endif %}

  <div class='pb-5'>
  {%if sourceCode%}
  <a target='_blank' href={{sourceCode}} class='urls block w-fit'>Source code</a>
  {%endif%}
  {%if liveDemo%}
  <a target='_blank' href={{liveDemo}} class='urls block pt-3 w-fit'>Live demo</a>
  {%endif%}
  </div>
  
  {% assign table_of_content = content | toc %}
  {% assign toc_size = table_of_content | size %}
  {% if toc_size > 0 %}
  <details open> 
  	<summary style="cursor: pointer;" class="text-xl font-bold">Table of contents</summary>
  	{{ table_of_content }}
  </details>      
  {% endif %}

  <article>{{ content }}</article>
</div>
